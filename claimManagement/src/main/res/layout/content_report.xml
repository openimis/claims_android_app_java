<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.openimis.imisclaims.Report"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:showIn="@layout/activity_report">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/acc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelAccepted"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:typeface="monospace"
                android:fontFamily="sans-serif-light"
                android:textSize="18dp"
                android:textColor="@color/Black"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:text="@string/accepted_claims" />

            <TextView
                android:id="@+id/valueAccepted"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:typeface="monospace"
                android:fontFamily="sans-serif-light"
                android:textSize="18dp"
                android:textColor="@color/Black"
                android:layout_marginLeft="15dp"
                android:textAlignment="textEnd"
                android:text="0" />

        </LinearLayout>
        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey2"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/acc"/>

        <LinearLayout
            android:id="@+id/Rej"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/line1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelRejected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:typeface="monospace"
                android:fontFamily="sans-serif-light"
                android:textSize="18dp"
                android:textColor="@color/Black"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:text="@string/rejected_claims" />

            <TextView
                android:id="@+id/valueRejected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:typeface="monospace"
                android:fontFamily="sans-serif-light"
                android:textSize="18dp"
                android:textColor="@color/Black"
                android:layout_marginLeft="15dp"
                android:textAlignment="textEnd"
                android:text="0" />

        </LinearLayout>

        <TextView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey2"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/Rej"/>


        <LinearLayout
            android:id="@+id/Pend"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/line2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelPending"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:typeface="monospace"
                android:fontFamily="sans-serif-light"
                android:textSize="18dp"
                android:textColor="@color/Black"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:text="@string/pending_claims" />

            <TextView
                android:id="@+id/valuePending"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:typeface="monospace"
                android:fontFamily="sans-serif-light"
                android:textSize="18dp"
                android:textColor="@color/Black"
                android:layout_marginLeft="15dp"
                android:textAlignment="textEnd"
                android:text="0" />

        </LinearLayout>

        <TextView
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey2"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/Pend"/>
    </RelativeLayout>




</androidx.core.widget.NestedScrollView>
